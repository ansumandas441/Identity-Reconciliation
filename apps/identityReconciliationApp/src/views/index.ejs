<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Contact Admin Panel</h1>
    
    <!-- Form to add a new contact -->
    <form id="contactForm" method="POST" action="/identify">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter email">
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter phone number">
        
        <button type="submit">Add Contact</button>
    </form>
    
    <h2>All Contacts</h2>
    <!-- Table to display all contacts -->
    <table id="contactTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Linked ID</th>
                <th>Link Precedence</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Deleted At</th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach(contact => { %>
                <tr>
                    <td><%= contact.id %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.phoneNumber %></td>
                    <td><%= contact.linkedId %></td>
                    <td><%= contact.linkPrecedence %></td>
                    <td><%= new Date(contact.createdAt).toLocaleString() %></td>
                    <td><%= new Date(contact.updatedAt).toLocaleString() %></td>
                    <td><%= contact.deletedAt ? new Date(contact.deletedAt).toLocaleString() : '' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <form id="clearForm" method="POST" action="/clear">
        <button type="submit">Clear All Contacts</button>
    </form>
</body>
</html>
